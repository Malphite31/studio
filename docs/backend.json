{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile within the SpendWise application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the UserProfile entity."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "username": {
          "type": "string",
          "description": "The user's chosen username."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "profilePicture": {
          "type": "string",
          "description": "URL or path to the user's profile picture.",
          "format": "uri"
        },
        "bio": {
          "type": "string",
          "description": "A short bio or description about the user."
        }
      },
      "required": [
        "id",
        "username",
        "email"
      ]
    },
    "Expense": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Expense",
      "type": "object",
      "description": "Represents a single expense entry.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Expense entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to UserProfile. (Relationship: UserProfile 1:N Expense)"
        },
        "categoryId": {
          "type": "string",
          "description": "Reference to Category. (Relationship: Category 1:N Expense)"
        },
        "amount": {
          "type": "number",
          "description": "The amount spent on the expense."
        },
        "date": {
          "type": "string",
          "description": "The date of the expense.",
          "format": "date-time"
        },
        "description": {
          "type": "string",
          "description": "A description of the expense."
        },
        "walletId": {
          "type": "string",
          "description": "The ID of the EWallet this expense was paid from."
        }
      },
      "required": [
        "id",
        "userId",
        "categoryId",
        "amount",
        "date"
      ]
    },
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a spending category (e.g., Food, Transportation).",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Category entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to UserProfile. (Relationship: UserProfile 1:N Category)"
        },
        "name": {
          "type": "string",
          "description": "The name of the category."
        },
        "description": {
          "type": "string",
          "description": "A description of the category."
        }
      },
      "required": [
        "id",
        "userId",
        "name"
      ]
    },
    "Budget": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Budget",
      "type": "object",
      "description": "Represents a monthly budget goal for a specific category.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Budget entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to UserProfile. (Relationship: UserProfile 1:N Budget)"
        },
        "categoryId": {
          "type": "string",
          "description": "Reference to Category. (Relationship: Category 1:N Budget)"
        },
        "month": {
          "type": "string",
          "description": "The month for which the budget is set (e.g., '2024-01')."
        },
        "amount": {
          "type": "number",
          "description": "The budget amount for the month."
        }
      },
      "required": [
        "id",
        "userId",
        "categoryId",
        "month",
        "amount"
      ]
    },
    "WishlistItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "WishlistItem",
      "type": "object",
      "description": "Represents an item in the user's wishlist.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the WishlistItem."
        },
        "name": {
          "type": "string",
          "description": "The name of the wishlist item."
        },
        "targetAmount": {
          "type": "number",
          "description": "The target savings amount for the item."
        },
        "savedAmount": {
          "type": "number",
          "description": "The amount saved so far for the item."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this wishlist item."
        },
        "purchased": {
          "type": "boolean",
          "description": "Whether the wishlist item has been purchased."
        }
      },
      "required": [
        "id",
        "name",
        "targetAmount",
        "savedAmount",
        "userId"
      ]
    },
    "Iou": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Iou",
      "type": "object",
      "description": "Represents a debt or loan.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Iou."
        },
        "name": {
          "type": "string",
          "description": "A description of the Iou."
        },
        "amount": {
          "type": "number",
          "description": "The amount of the Iou."
        },
        "type": {
          "type": "string",
          "enum": [
            "Borrow",
            "Lent"
          ],
          "description": "The type of Iou."
        },
        "dueDate": {
          "type": "string",
          "format": "date-time",
          "description": "The due date of the Iou."
        },
        "paid": {
          "type": "boolean",
          "description": "Whether the Iou has been paid."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this Iou."
        }
      },
      "required": [
        "id",
        "name",
        "amount",
        "type",
        "dueDate",
        "paid",
        "userId"
      ]
    },
    "Income": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Income",
      "type": "object",
      "description": "Represents a single income entry.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Income entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to UserProfile."
        },
        "name": {
          "type": "string",
          "description": "The source or description of the income."
        },
        "amount": {
          "type": "number",
          "description": "The amount of income received."
        },
        "date": {
          "type": "string",
          "description": "The date the income was received.",
          "format": "date-time"
        },
        "walletId": {
          "type": "string",
          "description": "The ID of the EWallet this income was received in."
        }
      },
      "required": [
        "id",
        "userId",
        "name",
        "amount",
        "date"
      ]
    },
    "EWallet": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "EWallet",
      "type": "object",
      "description": "Represents a user's E-Wallet (e.g., GCash, PayMaya).",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the EWallet."
        },
        "name": {
          "type": "string",
          "description": "The name of the E-Wallet (e.g., 'GCash')."
        },
        "balance": {
          "type": "number",
          "description": "The current balance of the E-Wallet."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this wallet."
        }
      },
      "required": [
        "id",
        "name",
        "balance",
        "userId"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "Stores user profile information. The userId is the Firebase Auth UID."
    },
    "/users/{userId}/expenses/{expenseId}": {
      "schema": "Expense",
      "description": "Stores expense data for a specific user."
    },
    "/users/{userId}/categories/{categoryId}": {
      "schema": "Category",
      "description": "Stores expense categories created by a specific user."
    },
    "/users/{userId}/budgets/{budgetId}": {
      "schema": "Budget",
      "description": "Stores budget information for a specific user."
    },
    "/users/{userId}/wishlist/{wishlistId}": {
      "schema": "WishlistItem",
      "description": "Stores wishlist items for a specific user."
    },
    "/users/{userId}/ious/{iouId}": {
      "schema": "Iou",
      "description": "Stores IOUs for a specific user."
    },
    "/users/{userId}/income/{incomeId}": {
      "schema": "Income",
      "description": "Stores income data for a specific user."
    },
    "/users/{userId}/wallets/{walletId}": {
      "schema": "EWallet",
      "description": "Stores E-Wallet information for a specific user."
    }
  },
  "storage": {
    "/profile-pictures/{userId}": {
      "description": "Stores user profile pictures. The filename should match the user's UID."
    }
  }
}
    