
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow profile picture uploads for authenticated users
    match /profile-pictures/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
