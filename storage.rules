rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the profile-pictures directory
    match /profile-pictures/{userId} {
      // Allow read access to anyone.
      allow read;
      // Allow write access only if the user is authenticated and the file belongs to them.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
